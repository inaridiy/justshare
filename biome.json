{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true,
		"ignore": [
			"**/components/ui/**/*.tsx",
			"**/components/ui/**/*.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"ignore": [
			"**/components/ui/**/*.tsx",
			"**/components/ui/**/*.ts"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	}
}