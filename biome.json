{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"useSortedClasses": "error"
			},
			"style": {
				"useBlockStatements": "off"
			},
			"correctness": {
				"noUndeclaredVariables": "off",
				"noNodejsModules": "off"
			}
		},
		"ignore": ["worker-configuration.d.ts"]
	}
}
